<div class="container">
  <div class="row flex-column col-6 mt-3">
    <h1>My Tasks</h1>
    <% @tasks.each do |task| %>
    <span>
      <% if task.completed %>
      <i class="far fa-check-square"></i>
      <% else %>
      <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to raw('<i style="color" class="far fa-trash-alt"></i>'), task_path(task),
      method: :delete,
      data: { confirm: "Are you sure you want to delete '#{task.title}' ?" } %>
    </span>
    <% end %>
    <%= link_to "add a new task", new_task_path %>
  </div>
</div>
