<div class="new">
  <h1>Create a new task</h1>
  <%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :details %>
  <%= f.text_field :details, class: 'form-control' %>
  <%= f.submit class: 'btn btn-primary mt-3 mb-3'%>
  <% end %>
  <span>
    <%= link_to "Back to list", tasks_path %>
  </span>
</div>
